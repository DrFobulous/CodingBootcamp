<!DOCTYPE html>
<html>
  <head>
    <title> Splurty </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class='row'>
      <div class="col-3">
      <%= link_to root_path, class: 'logo' do %>
       <div class="circle">
          <br />
          Dan
          <br />
          Pham
          <br />
          Web App 
        </div>
      <% end %>
      </div>
      <div class="col-4 slogan">
      Random Slogan
      </div>
      <div class="col-5 links">
        <%= link_to 'Contribute', new_quote_path %>
        <%= link_to 'About', '#' %> 
    </header>

    <hr />
    <br class="clear"/>
    <div class="container">
      <% if flash[:error].present? %>
        <div class="col-10 offset-1 alert alert-danger">
          <%= flash[:error].html_safe %>
        </div>
        <% end %>
      <%= yield %>
    </div>

    <div class="footer">
      <div class="container">
        <div class="row">
          <div class="col-6">
          <%= link_to "Temporary Placeholder Footer", root_path, class: 'next-quote' %>
          </div>
          <div class="col-6 footer-blurb">
          Edited by Dan Pham
          </div>
        <p class="text-muted">
        Place sticky footer content here.
        </p>
        </div>
      </div>
    </div>
  </body>
</html>

