<!DOCTYPE html>
<html>
  <head>
    <title> Splurty </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class='row'>
      <div class="col-3">
      <%= link_to root_path, class: 'logo' do %>
       <div class="circle">
          <br />
          Dan
          <br />
          Pham
          <br />
          Web App 
        </div>
      <% end %>
      </div>
      <div class="col col-sm-4 hidden-xs-down slogan">
      Random Slogan
      </div>
      <div class="col-10 offset-1 offset-sm-0 col-sm-5 links">
         <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
          Contribute
        </button>
        <%= link_to 'Contribute','#', data: {toggle: 'modal', target: '#myModal'}%>
          &nbsp;&nbsp;
        <%= link_to 'About', about_path %> 
    </header>


     <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">Ã—</span>
            </button>
            <h4 class="Contribute Your Quote" id="myModalLabel">Modal title</h4>
          </div>
          <div class="modal-body">
            <%= simple_form_for @Quote.new do |f| %>
              <%= f.input :saying, label: "What is the saying you want to add?", Placeholder: "Temporary Quote"%>
              <%= f.input :author, label: "Who is the author?", Placeholder: "Temporary Author" %>
              <br />
              <%= f.submit 'Create', class: 'btn btn-danger' %>
              </div>

              </div>
            <% end %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="mo  dal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>

    <hr />
    <br class="clear"/>

    <div class="container">
      <% if flash[:error].present? %>
        <div class="col-10 offset-1 alert alert-danger">
          <%= flash[:error].html_safe %>
        </div>
        <% end %>
      <%= yield %>
    </div>
  

    <div class="footer">
      <div class="container">
        <div class="row">
          <div class="col-12 col-sm-6">
          <%= link_to "Temporary Placeholder Footer", root_path, class: 'next-quote' %>
          </div>
          <div class="col-12 col-sm-6 footer-blurb">
          Edited by Dan Pham
          </div>
        <p class="text-muted">
        Place sticky footer content here.
        </p>
        </div>
      </div>
    </div>
  </body>
</html>

